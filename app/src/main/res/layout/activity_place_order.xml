<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg"
    android:theme="@style/MyCustomStyle"
    tools:context="com.bitcanny.office.mymenu.PlaceOrderActivity">

    <include
        android:id="@+id/tbar"
        layout="@layout/app_tool"></include>

    <RelativeLayout
        android:id="@+id/rel_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbar"

        android:text="@string/hello_world">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"

            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/lin_lay1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_view1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        />

                   <!-- <ImageView
                        android:id="@+id/img_add"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"
                        android:alpha=".68"
                        android:background="@drawable/fish"
                        android:layout_height="wrap_content" />-->
                    <ProgressBar
                        android:id="@+id/prg_bar"
                        android:layout_width="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar"
                        android:layout_height="wrap_content" />
                   <!-- <ImageView
                        android:id="@+id/img_view2"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/img_view1"
                        android:rotation="180"
                        android:layout_height="30dp"
                        android:background="@drawable/img_shadow"/>-->

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_lay1"
                    android:layout_margin="10dp">


                    <TextView
                        android:id="@+id/txt_fd_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_fd_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_fd_price"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_view11"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/veg" />

                        <ImageView
                            android:id="@+id/img_view22"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/non_veg" />

                        <ImageView
                            android:id="@+id/img_view3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:background="@drawable/fish" />

                        <ImageView
                            android:id="@+id/img_view4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/high_chilli" />

                        <ImageView
                            android:id="@+id/img_view5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/chef_reco" />

                        <ImageView
                            android:id="@+id/img_view6"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/high_rated" />
                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/lin_lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_lay1"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rel_lay2"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/lin_lay2"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:alpha=".47"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/abt_the_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:text="About the food"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/col48"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/open_img1" />


                    <TextView
                        android:id="@+id/txt_abt"
                        android:layout_below="@+id/abt_the_food"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:visibility="gone"
                        android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum"
                        />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rel_lay3"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rel_lay2"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="#FFF"
                    android:alpha=".47"
                    android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:text="Review"
                            />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/col48"
                            android:id="@+id/open_img2"/>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_lay4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:background="#FFF"
                    android:alpha=".47"
                    android:layout_below="@+id/rel_lay3">
                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                   >

                </ListView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_lay5"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_below="@+id/rel_lay4"
                    android:background="#FFF"
                    android:alpha=".47"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Comment"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/col48"
                        android:id="@+id/open_img3"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@+id/rel_lay5"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                   android:id="@+id/rel_lay6"

                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                   <!-- <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:background="@drawable/edit_view_style"
                        style="@style/MyCustomStyle"
                        android:hint="Name"
                        android:ems="10"/>-->
                    <EditText
                        android:id="@+id/edt_comment"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_view_style"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:minLines="4"
                        style="@style/MyCustomStyle"
                        android:hint="Comment"
                        android:ems="15"/>

                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/simple_button"
                        android:text="Submit"/>

                </LinearLayout>
            </RelativeLayout>


        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="100dp">
        <ImageView
            android:id="@+id/img_add"
            android:layout_width="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/add48"
            android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
