<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:padding="10dp"
    android:layout_gravity="center"
    android:layout_width="165dp"

    android:background="@drawable/focusable_color"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grid_item_style"

        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/grid_img"
            android:layout_width="match_parent"
            android:layout_height="130dp"

            android:scaleType="fitXY"

            android:layout_centerHorizontal="true"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/grid_img"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
           >

            <TextView
                android:id="@+id/txt_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#00BCD4"
                android:textSize="13dp"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="value"
                />

            <LinearLayout
                android:id="@+id/lin_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_food_name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_view1"
                android:layout_width="10dp"
                android:layout_height="10dp"

               />

                <ImageView
                    android:id="@+id/img_view2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"

                   />
                <ImageView
                    android:id="@+id/img_view3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"


                    />
                <ImageView
                    android:id="@+id/img_view4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"

                   />
                <ImageView
                    android:id="@+id/img_view5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"

                   />
                <ImageView
                    android:id="@+id/img_view6"
                    android:layout_width="10dp"
                    android:layout_height="10dp"

                  />
            </LinearLayout>
          <!--  <TextView
                android:id="@+id/txt_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lin_sp"
                android:layout_below="@+id/txt_food_name"
                android:layout_align="true"
                android:textColor="#00BCD4"
                android:textSize="30dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Value"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_food_name"
                android:textColor="#00BCD4"
                android:textSize="15dp"
               android:layout_marginRight="5dp"

                android:paddingBottom="2dp"
                android:text="Rs 70"
                android:id="@+id/food_price" />
        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


