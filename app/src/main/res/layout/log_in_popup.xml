<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_up_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".97"
    android:background="@drawable/white_bg">
    <!--  <ImageView
          android:id="@+id/cross"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentRight="true"
          android:layout_margin="10dp"
          android:background="@drawable/cross48"/>-->

    <include
        android:id="@+id/app_tl"
        layout="@layout/app_tool"></include>

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/app_tl"
        android:layout_marginBottom="40dp">


        <TextView
            android:id="@+id/txt_log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Log In"
            android:visibility="gone"
            android:textColor="#000"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/email"
            style="@style/MyCustomStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_view_style"
            android:hint="Email/LogIn Id"
            android:padding="4dp" />

        <EditText
            android:id="@+id/password"
            style="@style/MyCustomStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email"
            android:layout_margin="10dp"
            android:background="@drawable/edit_view_style"
            android:hint="Password"
            android:padding="4dp" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pgr_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_below="@+id/rel2"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pgr_bar"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20dp"
        android:background="@drawable/button_focusable"
        android:text="Submit" />

</RelativeLayout>
