<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rel_main"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/green_back">

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:fillViewport="false"
        android:id="@+id/">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/lbl_restro_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Menu Ocean"
                    android:textColor="#fff"
                    android:textSize="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
              >

                <EditText
                    android:id="@+id/edt_rest_code"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:maxLines="1"

                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:hint="Resturant Code" />
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="105dp"
                android:layout_below="@+id/edt_rest_code"
                android:layout_centerHorizontal="true"
               android:padding="5dp"

                app:cardCornerRadius="5dp"
                android:elevation="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="45dp">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_gravity="center"


                    android:background="@color/backColor"
                    android:layout_height="40dp">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    android:background="@drawable/increment_decrement_focus"
                    android:alpha=".68"


                    android:ems="13"
                    android:text="Submit"
                    android:textColor="@color/primaryColor"
                    />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
                <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:layout_marginTop="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/img_cam_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:layout_centerHorizontal="true" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp" >
                    <TextView
                        android:id="@+id/txt_scan_qr"
                        android:layout_width="wrap_content"
                        android:text="Scan QR code"
                        android:textColor="#fff"
                       android:layout_alignParentTop="true"
                        style="?android:attr/selectableItemBackground"
                        android:colorControlHighlight="#000"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/increment_decrement_focus"
                        android:layout_height="wrap_content" />


                    <ImageButton
                        android:id="@+id/img_cam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_scan_qr"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        style="?android:attr/selectableItemBackground"
                        android:colorControlHighlight="#000"
                        android:background="@drawable/increment_decrement_focus"

                        android:src="@drawable/qr_scan"/>

                    <TextView
                        android:id="@+id/txt_developed_by"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/img_cam"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Developed By"
                        android:textColor="#fff"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/lbl_bitcanny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_developed_by"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/increment_decrement_focus"
                        android:text="BitCanny Technologies Pvt Ltd"
                        android:textColor="#fff" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    <!--</ScrollView>-->

    <!--
            <ProgressBar
	       android:id="@+id/progressBar1"
	       style="?android:attr/progressBarStyleHorizontal"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentLeft="true"
	       android:layout_alignParentTop="true" />
    -->

    <ImageButton
        android:id="@+id/img_btn_hlp"
        android:layout_width="25dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/app_info"

       android:layout_margin="10dp"
        style="@style/MyButtonStyle.selector"

       android:layout_alignParentRight="true"
        android:layout_height="25dp" />
</RelativeLayout>